{% extends 'page.html.twig' %}

{% block title %}Kontakt | Borys Jankiewicz{% endblock %}
{% block meta_description %}Szukasz Technical Product Managera? Skontaktuj się ze mną, aby omówić współpracę lub strategię produktu.{% endblock %}


{% block javascripts %}
{{parent()}}
<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
{% endblock %}

{% block stylesheets %}
{{parent()}}
<style>
	.hero-dark-overlay { background-color: #111; }

	/* Box formularza - białe tło i cień */
	.contact-form-box {
		background: #fff;
		padding: 40px;
		border-radius: 8px;
		box-shadow: 0 10px 40px rgba(0,0,0,0.08); /* Wyraźniejszy cień */
		border: 1px solid #eee;
	}

	/* Pola formularza */
	.form-control-blak {
		background-color: #f9f9f9;
		border: 1px solid #eee;
		border-radius: 4px;
		box-shadow: none;
		height: 50px;
		padding-left: 20px;
		font-size: 14px;
		transition: all 0.3s ease;
		width: 100%;
	}

	.form-control-blak:focus {
		background-color: #fff;
		border-color: #222; /* Ciemny border przy aktywności */
		box-shadow: none;
	}

	textarea.form-control-blak {
		height: 120px !important;
		padding-top: 15px;
		resize: vertical;
	}

	.form-label {
		font-weight: 700;
		font-size: 12px;
		text-transform: uppercase;
		letter-spacing: 1px;
		color: #333;
		margin-bottom: 8px;
		display: block;
	}

	.form-group {
		margin-bottom: 25px;
	}
</style>
{% endblock %}

{% block sections %}
<section class="hero-about">
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="content">
				<h2 class="wf-lead-text">Kontakt ze mną</h2>

				<p class="wf-body-text">
				Szukasz Technical Product Managera? Napisz do mnie.</p>

			</div>
		</div>
	</div>
</div>
</section>


<section class="sec-padding no-top-padding">
<div class="container">
	<div class="row">

		<div class="col-md-8">

			<div class="contact-form-box"
				{# 1. Inicjalizacja kontrolera 'contact' #}
				data-controller="contact"
				{# 2. Przekazanie adresu URL do kontrolera (Value API) #}
				data-contact-url-value="{{ contact_api_url}}">

				<div data-contact-target="message" 
					style="display:none; margin-bottom: 20px; padding: 15px; border-radius: 4px;">
				</div>

				<form method="post" action="#" 
					data-contact-target="form"
					data-action="submit->contact#submit">


					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="form-label">Twoje Imię *</label>
								<input type="text" name="name" class="form-control-blak" placeholder="Wpisz imię" required>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="form-label">Adres Email *</label>
								<input type="email" name="email" class="form-control-blak" placeholder="Wpisz email" required>
							</div>
						</div>
					</div>

					<div class="form-group">
						<label class="form-label">Temat</label>
						<input type="text" name="subject" class="form-control-blak" placeholder="Np. Oferta współpracy">
					</div>

					<div class="form-group">
						<label class="form-label">Wiadomość *</label>
						<textarea class="form-control-blak" name="message" placeholder="Jak mogę Ci pomóc?" required></textarea>
					</div>

					<div class="form-group" style="margin-top: 15px; margin-bottom: 20px;">
						<div class="checkbox">
							<label style="font-size: 12px; color: #666; line-height: 1.5;">
								<input type="checkbox" name="privacy_policy" required>

								Wyrażam zgodę na przetwarzanie moich danych osobowych
								w celu obsługi zapytania i kontaktu zwrotnego. Zapoznałem/am się z
								<a href="/privacy" target="_blank" style="text-decoration: underline; color: #333;">Polityką Prywatności</a>. *
							</label>
						</div>
					</div>


					<div class="form-group"><div class="cf-turnstile" data-sitekey="0x4AAAAAACEnHv2k1yQB9a5g"></div></div>


					<button type="submit" 
						data-contact-target="button" 
						class="btn btn-dark btn-round btn-medium uppercase">

						<span data-contact-target="buttonText">Wyślij Wiadomość</span>

						<span data-contact-target="buttonLoader" style="display:none;">
							<i class="fa fa-spinner fa-spin"></i> Wysyłanie...
						</span> 
					</button>

				</form>
			</div>

		</div>

		<div class="col-md-4">
			<div style="padding-left: 30px;">
				<h4 class="uppercase font-weight-5 margin-top-2">Dane kontaktowe</h4>
				<br/>

				<div class="iconlist-2">
					<div class="icon dark"><i class="fa fa-map-marker"></i></div>
					<div class="text">Gdańsk / Zdalnie</div>
				</div>

				<div class="iconlist-2">
					<div class="icon dark"><i class="fa fa-envelope"></i></div>
					<div class="text"><a href="mailto:borysjankiewicz@gmail.com">borysjankiewicz@gmail.com</a></div>
				</div>

				<div class="iconlist-2">
					<div class="icon dark"><i class="fa fa-linkedin"></i></div>
					<div class="text"><a href="https://linkedin.com/in/borysjank" target="_blank">LinkedIn Profile</a></div>
				</div>

				<div class="clearfix"></div>
				<div class="divider-line solid light margin-top-3 margin-bottom-3"></div>

				<h4 class="uppercase font-weight-5 margin-top-2">Open to Work</h4>
				<p class="text-gray">Jestem dostępny od zaraz na stanowiska: Technical Product Manager, Growth Specialist, Product Owner.</p>
			</div>
		</div>

	</div>
</div>
</section>

{% endblock sections %}

